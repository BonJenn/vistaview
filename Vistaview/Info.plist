<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
    "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App identity -->
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>com.yourcompany.Vistaview</string>
    <key>CFBundleName</key>
    <string>Vistaview</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>

    <!-- Privacy keys for camera & mic -->
    <key>NSCameraUsageDescription</key>
    <string>This app needs camera access for live preview and streaming.</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>This app needs microphone access for live audio streaming.</string>
</dict>
</plist>
